from replit import clear
#HINT: You can call clear() to clear the output in the console.


#create bid dictionary
auction_log = []

def add_new_bidder(bidder_name, bidder_price):
  new_auction_log = {}
  new_auction_log["Name"] = bidder_name
  new_auction_log["Bid Price"] = bidder_price

  auction_log.append(new_auction_log)
  
more_bids = True

while more_bids:
  #import logo
  from art import logo
  print(logo)

  #ask for name input
  print("Welcome to Secret Auction!")
  name = input("What is your name?\n")

  #ask for bid price
  bid = input("How much do you want to bid?\n")

  #add Name and Bid into bid dictionary as the key and value

  add_new_bidder(bidder_name=name,bidder_price=bid)
  
  #ask if anyone else wants to bid
  additional_bidders = input("Does anyone else want to bid? Type 'yes' or 'no'\n")

  if additional_bidders == "yes":
    clear()
  else:
    more_bids = False

print(auction_log)
